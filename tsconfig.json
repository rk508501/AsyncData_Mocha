{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "mocha"],
    "resolveJsonModule": true
  },
  "include": [
    "tests/**/*.ts",
    "testdata/**/*.ts"
  ],
  "files": [
    "tests/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
